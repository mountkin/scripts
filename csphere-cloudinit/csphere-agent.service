- name: csphere-agent.service
  command: start
  enable: true
  content: |
    [Unit]
    Description=csphere agent
    Requires=csphere-prepare.service

    [Service]
    EnvironmentFile=/etc/csphere/csphere-agent.env
    User=root
    ExecStartPre=/bin/sleep 1
    ExecStart=/bin/csphere --tls join
    Restart=on-failure
    RestartSec=3

    [Install]
    WantedBy=multi-user.target
