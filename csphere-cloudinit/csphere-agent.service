- name: csphere-agent.service
  command: start
  enable: true
  content: |
    [Unit]
    Description=csphere agent
    Requires=csphere-prepare.service

    [Service]
    EnvironmentFile=/etc/csphere-agent.env 
    User=root
    ExecStart=/bin/csphere --tls join

    [Install]
    WantedBy=multi-user.target
